{
  "watch": ["src/**/*", "data.json"],
  "ext": "ts,js,json",
  "ignore": [
    "node_modules/",
    "dist/",
    "*.test.ts",
    "*.spec.ts",
    "*.test.js",
    "*.spec.js",
    ".git",
    "logs",
    "*.log"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "500",
  "restartable": "rs",
  "verbose": true,
  "colours": true,
  "execMap": {
    "ts": "ts-node --esm"
  },
  "events": {
    "restart": "echo '🔄 服务器重启中...'",
    "crash": "echo '💥 服务器崩溃，正在重启...'"
  }
} 